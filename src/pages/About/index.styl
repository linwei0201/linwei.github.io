.profile-wrapper
  width 1000px
  margin 0 auto
  text-align center
  .avatar
    border-radius 50%
    display inline-block
    width 100px
    height 100px
  ul, li
    list-style none
  .links
    padding 0
    margin-top 40px
    li
      display inline-block
      font-size 16px
      &:not(:last-child)
        margin-right 10px
      a
        background #bfbfbf
        border-radius 50%
        width 26px
        height 26px
        display inline-block
        text-align center
        line-height 26px
        text-decoration none
        cursor pointer
        i
          color #fff
  .title
    border-bottom 1px solid #eee
    margin 25px auto 0
    padding-bottom 5px
    width 450px
  .interests
    margin 10px 0
    li
      display inline-block
      color #bfbfbf
      padding 5px
      border 1px solid #bfbfbf
      border-radius 13px
      font-weight normal
      font-size 12px
      &:not(:last-child)
        margin-right 10px